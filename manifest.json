{
    "manifest_version": 2,
    "name": "Eclipsed",
    "description": "Applies Dark Theme for Current Page.",
    "version": "1.0",
    "icons": {
        "32": "img/icon.png"
    },
    "omnibox": {
        "keyword": "eclipced"
    },
    "background":{
        "scripts": ["src/background.js"],
        "persistent": true
    },
    "options_page": "options.html",
    "browser_action":{
        "default_title": "Eclipced | Extension",
        "default_icon": {
            "32": "img/icon.png"
        },
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["src/main.js"]
        }
    ],
    "permissions": [
        "activeTab", "tabs"
    ]
}